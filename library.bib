file = {:Users/austin/Dropbox/Thesis Research/References/Tsyganenko{\_}et{\_}al-2005-Journal{\_}of{\_}Geophysical{\_}Research{\_}{\_}Space{\_}Physics{\_}(1978-2012).pdf:pdf},
isbn = {0148-0227},
