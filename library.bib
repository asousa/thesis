keywords = {Energetic precipitation,Geomagnetic storms,Nitric oxide,Ozone,Solar wind},
number = {10-11},
pages = {1176--1189},
title = {{Impact of different energies of precipitating particles on NOx generation in the middle and upper atmosphere during geomagnetic storms}},
