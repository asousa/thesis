title = {{United States High-Altitude Test Experiments: A Review Emphasizing the Impact on the Environment}},
url = {http://www.fas.org/sgp/othergov/doe/lanl/docs1/00322994.pdf},
volume = {LA-6405},
year = {1976}
}
